                    member.ProvinceCode = request.provincecode.Trim();
                    member.CityCode = request.citycode.Trim();

                    //开户
                    var response = iGuangDaAPIService.CreateAccount(member, bankCard);

                    if (response.IsOK)
                    {
                        member.IsCreateAccount = AccountStatus.Created.ToInt();

                        iMemberService.Save(member);
                        iMemberService.Commit();
                    }
                    else
