@using AIPXiaoTong.Model.Site;
@using AIPXiaoTong.Model;

@{

}
@model PreferencesCM

<div class="page-container page-container-custom">
    <form action="" method="post" class="form form-horizontal" id="CreateFrom">
        @Html.HiddenFor(t => t.ID)
        @Html.AntiForgeryToken()
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>商户信息：</label>
            <div class="formControls col-xs-8 col-sm-9">
                @Html.TextBoxFor(t => t.MerchantInfo, new { @class = "input-text", placeholder = "" })
                @Html.ValidationMessageFor(t => t.MerchantInfo)
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>URL：</label>
            <div class="formControls col-xs-8 col-sm-9">
                @Html.TextBoxFor(t => t.MerchantUrl, new { @class = "input-text", placeholder = "商户链接地址" })
                @Html.ValidationMessageFor(t => t.MerchantUrl)
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2">商户秘钥：</label>
            <div class="formControls col-xs-8 col-sm-9">
                @Html.TextBoxFor(t => t.SecretKey, new { @class = "input-text", placeholder = "商户秘钥" })
                @Html.ValidationMessageFor(t => t.SecretKey)
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2">APPID：</label>
            <div class="formControls col-xs-8 col-sm-9">
                @Html.TextBoxFor(t => t.APPID, new { @class = "input-text", placeholder = "APPID" })
                @Html.ValidationMessageFor(t => t.APPID)
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2">收银宝商户号：</label>
            <div class="formControls col-xs-8 col-sm-9">
                @Html.TextBoxFor(t => t.POSBaoMerchant, new { @class = "input-text", placeholder = "收银宝商户号" })
                @Html.ValidationMessageFor(t => t.POSBaoMerchant)
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2">收银宝Key：</label>
            <div class="formControls col-xs-8 col-sm-9">
                @Html.TextBoxFor(t => t.POSBaoKey, new { @class = "input-text", placeholder = "收银宝Key" })
                @Html.ValidationMessageFor(t => t.POSBaoKey)
            </div>
        </div>

        @Html.Partial("_Save", new EntityModel() { ID = Model.ID, Status = Model.Status })

    </form>
</div>


