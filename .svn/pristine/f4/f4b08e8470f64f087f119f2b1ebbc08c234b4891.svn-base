@using AIPXiaoTong.Model.Site;
@using AIPXiaoTong.Model;

@{
    var merInfo = ViewBag.merInfo;
    var districtNameList = ViewBag.DistrictNameList as List<DistrictManagementLM>;

}



<div class="page-container">
    <div class="text-c">
        @using (Ajax.BeginForm("Index", new RouteValueDictionary { { "id", "" } }, new AjaxOptions() { UpdateTargetId = "resultList", }, new RouteValueDictionary { { "id", "searchForm" } }))
        {
            <label>项目名称:</label><input type="text" name="ProjetName" id="ProjetName" style="width:160px" class="input-text">

            <label>区域:</label>
            <span class="select-box inline">

                <select id="DistrictManagementID" name="DistrictManagementID" style="width:100px;" class="select">
                    <option value=""></option>
                    @for (int i = 0; i < districtNameList.Count; i++)
                    {
                        if (districtNameList[i].MerchantID == merInfo.ID)
                        {
                            <option value="@districtNameList[i].ID">@districtNameList[i].DistrictName</option>
                        }
                    }
                </select>

            </span>
            <label>状态:</label>
            <span class="select-box inline">
                <select id="Status" name="Status" style="width:80px;" class="select">
                    <option value=""></option>
                    <option value="1">审核通过</option>
                    <option value="0">待审核</option>
                    <option value="-1">审核未通过</option>
                </select>
            </span>
            @Html.Partial("_Query")
        }
    </div>
    <div id="resultList">
        @Html.Partial("Grid")
    </div>
</div>

