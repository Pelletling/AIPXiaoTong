@using AIPXiaoTong.Model.Site;
@using AIPXiaoTong.Model;

@{
    var merInfo = ViewBag.merInfo as Merchant;
    var projectManagementList = ViewBag.ProjectManagementList as List<ProjectManagementLM>;
}

<div class="page-container">
    <div class="text-c">
        @using (Ajax.BeginForm("Index", new RouteValueDictionary { { "id", "" } }, new AjaxOptions() { UpdateTargetId = "resultList", }, new RouteValueDictionary { { "id", "searchForm" } }))
        {
            <label>会员名:</label><input type="text" name="Name" id="Name" style="width:160px" class="input-text">

            <label>手机号码:</label><input type="text" name="Mobile" id="Mobile" style="width:160px" class="input-text">

            <label>身份证号码:</label><input type="text" name="IDNumber" id="IDNumber" style="width:160px" class="input-text">

            <label>项目名称:</label>
            <span class="select-box inline">
                <select id="ProjectManagementID" name="ProjectManagementID" style="width:100px;" class="select">
                    <option value=""></option>
                    @for (int i = 0; i < projectManagementList.Count; i++)
                    {
                        if (projectManagementList[i].MerchantID == merInfo.ID)
                        {
                            <option value="@projectManagementList[i].ID">@projectManagementList[i].ProjetName</option>
                        }
                    }
                </select>
            </span>

            @Html.Partial("_Query")
        }
    </div>
    <div id="resultList">
        @Html.Partial("Grid")
    </div>
</div>



