using AIPXiaoTong.IService;
using AIPXiaoTong.Model;
using Framework.LambdaExpression;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Linq.Expressions;
using System.Text;
using System.Threading.Tasks;

namespace AIPXiaoTong.Service
{
    public class HouseTypeNameService : BusinessService<HouseTypeName>, IHouseTypeNameService
    {
        public override Expression<Func<HouseTypeName, bool>> GetExpress<QM>(QM model)
        {
            Expression<Func<HouseTypeName, bool>> express = DynamicExpressions.True<HouseTypeName>();

            var m = model as HouseTypeNameQM;

            //if (!string.IsNullOrWhiteSpace(m.DistrictName))
            //{
            //    express = express.AndAlso(t => t.DistrictName == m.DistrictName.Trim());
            //}

            if (m.Status != null)
            {
                express = express.AndAlso(t => t.Status == m.Status);
            }

            return express;
        }

    }
}
