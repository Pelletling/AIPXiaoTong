        /// <returns></returns>
        public string CreateOrderBooking(CreateOrderBookingRequst request)
        {
            var result = new CreateOrderBookingResponse() { requestno = request.requestno };

            try
            {
                if (!ModelState.IsValid)
                    throw new APIException(ModelState.Values.Where(t => t.Errors.Count > 0).FirstOrDefault().Errors.FirstOrDefault().ErrorMessage);

                var e = iMemberService.Get(t => t.Mobile == request.mobile);

                if (e == null)   //当该用户号码未注册会员，则在预约订单表中保存预约信息，否则查询出此已预约信息后更新数据表信息
                {

                    var entity = new OrderBooking();

                   // entity.MemberID = request.merchantid.ToLong();
                    entity.OrderName = request.name;
                    entity.OrderMobile = request.mobile;
                    entity.MerchantID = request.merchantid.ToInt();
                    entity.OrderNumber = GuidHelper.GenUniqueId();
                    entity.ProjectManagementID = request.projectid.ToInt();
                    entity.EquipmentNumber = request.equipmentnumber;
                    entity.OrderTime = Convert.ToDateTime(request.ordertime);
                    entity.Remark = request.remark;
                    entity.EmployeeID = request.employeeid.ToInt();

                    iOrderBookingService.Save(entity);

                    result.ordernumber = entity.OrderNumber;
                    result.orderbookingid = entity.ID.ToString();
                }
                else
                {
                    var d = iOrderBookingService.Get(t => t.MemberID == e.ID && t.MerchantID.ToString() == request.merchantid);

                    d.MerchantID = request.merchantid.ToInt();
                    d.MemberID = e.ID;
                    d.OrderNumber = GuidHelper.GenUniqueId();
                    d.ProjectManagementID = request.projectid.ToInt();
                    d.EquipmentNumber = request.equipmentnumber;
                    d.OrderTime = Convert.ToDateTime(request.ordertime);
                    d.Remark = request.remark;
                    d.EmployeeID = request.employeeid.ToInt();

                    iOrderBookingService.Save(d);

                    result.ordernumber = d.OrderNumber;
                    result.orderbookingid = d.ID.ToString();
                }

                iOrderBookingService.Commit();

            }
            catch (APIException ex)
            {
                result.resultmsg = ex.Message;
                result.retsultcode = ex.ErrorCode;
            }

            return JsonHelper.Serialize(result);
        }

