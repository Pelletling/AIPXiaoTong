<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="true"
      internalLogLevel="Off" internalLogFile="d:\temp\nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="myvar" value="myvalue"/>

  <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->

  <targets>
    <target name="PosApi" xsi:type="File" fileName="${basedir}/logs/PosApi_${shortdate}.txt" layout="${longdate}|${level}|${callsite}|${message}"/>
    <!--<target name="TLTApi" xsi:type="File" fileName="${basedir}/logs/TLTApi_${shortdate}.txt" layout="${longdate}|${level}|${callsite}|${message}"/>-->
    <target name="GuangDaApi" xsi:type="File" fileName="${basedir}/logs/GuangDaApi_${shortdate}.txt" layout="${longdate}|${level}|${callsite}|${message}"/>
    <target name="Notify" xsi:type="File" fileName="${basedir}/logs/Notify_${shortdate}.txt" layout="${longdate}|${level}|${callsite}|${message}"/>
  </targets>

  <rules>
    <!--<logger name="TltApi.TltExec" minlevel="Trace" writeTo="TLTApi"/>-->
    <logger name="GuangDaAPI.GuangDaExec" minlevel="Trace" writeTo="GuangDaApi"/>
    <logger name="AIPXiaoTong.Service.*" minlevel="Trace" writeTo="GuangDaApi"/>
    <logger name="AIPXiaoTong.Site.Controllers.APIController" minlevel="Trace" writeTo="PosApi"/>
    <logger name="AIPXiaoTong.Site.Controllers.NotifyController" minlevel="Trace" writeTo="Notify"/>
  </rules>
  
</nlog>
